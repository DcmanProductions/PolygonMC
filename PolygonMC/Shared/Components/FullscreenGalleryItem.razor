<div class="popup">
    <div class="gallery-item popup-content" style="background-image: url('@Image')">
        <button id="close-button" class="secondary fa fa-close" @onclick=OnClose></button>
        <button id="next-button center horizontal vertical" @onclick="()=>{}"> <i class="fa fa-solid fa-chevron-right"></i> </button>
        <button id="next-button center horizontal vertical" @onclick="()=>{}"> <i class="fa fa-solid fa-chevron-left"></i> </button>
        <div class="gallery-info">
            <div class="gallery-title">@Title</div>
            <div class="gallery-description">@Description</div>
        </div>
    </div>
</div>
@code {
    [Parameter]
    public string Image { get; set; }
    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public string Description { get; set; }
    [Parameter]
    public Action OnClose { get; set; }
}
