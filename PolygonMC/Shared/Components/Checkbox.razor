<div class="checkbox row center horizontal" @onclick="()=>{IsChecked=!IsChecked; OnChecked.Invoke(IsChecked);}">
    <span class="title">@Title</span>
    <span class="checkmark fa fa-check @(IsChecked?"checked":"")"></span>
</div>

@code {
    [Parameter]
    public bool IsChecked { get; set; }
    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public Action<bool> OnChecked { get; set; } = a => { };
}
